@import '../../styl/component-include.styl'

.b-line-menu
  font-size 12pt
  
  span
    color #999
  
  a,
  span
    margin 0 9px
    line-height 36px
    
    @media( max-width 740px )
      display none
  
  @media( max-width 740px )
    a:nth-child(1),
    a:nth-child(2),
    a:nth-child(3),
    a:nth-child(4),
    a:nth-child(5)
      display inline
  
      
  hr
    width 33.3%
    margin-right auto
    margin-left auto