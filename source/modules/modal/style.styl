@import '../../styl/component-include.styl'

.modal
  color #333
  line-height 1.72857143
  
  .modal-content
    padding 24px 10px 10px
    
  &.bottom-sheet
    .modal-content
      padding 24px 15px 15px
  
  a
    color #c03
    text-decoration underline
    
    &:hover,
    &:focus
      color #f36
      
  h2
    font-size 32pt
    margin 30px 0 65px
    
    @media( max-width 750px )
      font-size 18pt
      margin 0 0 26px
  
  .b-phone-icon
    display block
    margin 0 auto 20px
    width 32px
    height 32px
    background embedurl( 'img/phone-modal-icon.png' ) no-repeat 0 0
    
    @media( max-width 750px )
      display none
  
  .b-post-icon
    display block
    margin 0 auto 15px
    width 32px
    height 32px
    background embedurl( 'img/post-icon.png' ) no-repeat 0 0
    
    @media( max-width 750px )
      display none
  
  &:not(.bottom-sheet) .modal-close
    display block
    margin 0 auto
    width 64px
    height 64px
    background embedurl( 'img/close-icon.png' ) no-repeat center center #efefef
    border-radius 51%
    position absolute
    top 35px
    right 35px
    
    &:hover
      background embedurl( 'img/close-icon-hover.png' ) no-repeat center center #999
      
    @media( max-width 750px )
      top auto
      bottom 20px
      left 50%
      margin-left -32px
      
  &-phones
    margin-bottom 70px
      
    @media( max-width 750px )
      margin-bottom 36px
  
    a
      color #333
      text-decoration none
      
      &:hover,
      &:focus
        color #f36
        text-decoration none
  
    div
      font-size 13.5pt
      margin-bottom 4px
      line-height 1.1
      
      @media( max-width 750px )
        font-size 14pt
        line-height 1.4
    
      &:first-of-type
        font-size 34pt
        margin-bottom 21px
        line-height normal
      
        @media( max-width 750px )
          font-size 16pt
          margin-bottom 0
          line-height 1.4
        
  &-post
    font-size 20pt
    margin-bottom 95px
      
    @media( max-width 750px )
      margin-bottom 100px
      font-size 16pt
      
//new phone modal

#phoneModal.modal
  width 730px
  border-radius 10px
  background none
  
  @media( max-width 767px )
    width 350px
    
.b-phone-modal
  display flex
  justify-content space-between

  &:after
    content ''
    display block
    clear both

  &__ill
    width 50%
    background-position 0 0
    background-repeat no-repeat
    background-size cover
    
    @media( max-width 767px )
      display none
    
  &__text
    width 50%
    padding 55px 65px 45px
    background #fff
    
    @media( max-width 767px )
      position relative
      width 100%
      
    @media( max-height 640px )
      font-size 10.5pt
      line-height 1.5
      
    @media( max-height 540px )
      padding 25px 30px
    
    h2
      font-size 21pt
      margin 0 0 35px
      
      @media( max-height 740px )
        margin-bottom 25px
      
      @media( max-height 640px )
        margin-bottom 15px
        font-size 18pt
        line-height 1.2
      
  &__cover
    display none
    
    @media( max-width 767px )
      position absolute
      top 0
      left 0
      width 100%
      height 40%
      display block
      background-position 0 bottom
      background-repeat no-repeat
      background-size cover
      opacity .6
      z-index -1
      
  &__phones
    font-size 10.5pt
    margin-bottom 40px
    
    b
      font-size 13.5pt
      
    a
      text-decoration none
      
    @media( max-height 740px )
      margin-bottom 25px
      
    @media( max-height 640px )
      margin-bottom 15px
      
  &__address
    margin-bottom 55px
    
    @media( max-height 740px )
      margin-bottom 25px
      
    @media( max-height 640px )
      margin-bottom 15px
    
  &__post
    margin-bottom 50px
    
    .modal & a
      color #fff
      text-decoration none
      
      &:hover,
      &:focus,
      &:active
        opacity 1
        color #fff
        
    @media( max-height 740px )
      margin-bottom 25px
      
    @media( max-height 640px )
      margin-bottom 15px
        
  &__close
    font-size 9pt
    
    a
      text-decoration none
      
  .modal:not(.bottom-sheet) & .modal-close
    width auto
    height auto
    background none
    position static
    top auto
    right auto
    border-radius 0
    margin 0
    display inline-block
  