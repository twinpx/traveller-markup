.b-banner
  clear both
  
  .row
    margin-bottom 0
    overflow hidden
    
  .col-sm-4,
  .col-sm-8,
  .col-sm-12
    padding-top 100%
    background-repeat no-repeat
    background-position center center
    background-size cover
    margin-top -1px
    
    @media (min-width: 768px)
      padding-top 33.3%
    
  .b-banner
    
    &__text
      position absolute
      bottom 0
      left 0
      width 100%
      height 100%
      color #fff
      text-align center
      
    &__section
      padding 0 10px
      font-size 10.5pt
      font-weight bold
      position absolute
      top 4%
      left 0
      width 100%
      
    &__title
      padding 0 10px
      font-size 16pt
      font-weight bold
      line-height 30px
      position absolute
      top 25%
      left 0
      width 100%
      
    &__type
      padding 0 10px
      font-size 11pt
      line-height 24px
      position absolute
      top 55%
      left 0
      width 100%
      
    &__price
      padding 0 10px
      font-size 16pt
      position absolute
      bottom 5%
      left 0
      width 100%
      
      &__num
        font-weight bold