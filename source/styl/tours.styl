.b-tours
  clear both
  
  .row
    margin-bottom 30px !important
    overflow hidden
    
    @media( max-width 767px )
      margin-bottom 14px !important
    
  .col-sm-4,
  .col-sm-8,
  .col-sm-12
    padding-top calc(100% - 30px)
    margin-top -1px
    
    @media (min-width: 768px)
      padding-top calc(33.3% - 30px)
      
    @media (max-width 767px)
      margin-bottom 14px
      
      &:last-child
        margin-bottom 0
    
  .col-sm-4
    &:nth-of-type(1) .b-announcement__image
      animation impression-bg1 15s linear infinite
    &:nth-of-type(2) .b-announcement__image
      animation impression-bg3 15s linear infinite
    &:nth-of-type(3) .b-announcement__image
      animation impression-bg5 15s linear infinite
    
  .col-sm-8
    &:nth-of-type(1) .b-announcement__image
      animation impression-bg2 15s linear infinite
    &:nth-of-type(2) .b-announcement__image
      animation impression-bg4 15s linear infinite
    
  .col-sm-12 .b-announcement__image
    animation impression-bg3 15s linear infinite
      
  .b-card-text
    position absolute
    bottom 0
    left 0
    width 100%
    height 100%
    display flex
    justify-content center
    align-items center
    color #fff
    font-weight bold
    font-size 18pt
    padding 20px
    line-height 1.2
    text-align center
    text-decoration none
    z-index 2
    
  .b-tours
      
    &__image
      display block
      position absolute
      top 0
      left 15px
      width calc(100% - 30px)
      height 100%
      background-repeat no-repeat
      background-position center center
      background-size cover
      //opacity 0
      transition( opacity 0.5s ease )
      z-index 1
      
      &.i-show
        opacity 1
      
      &:before
        content ''
        display block
        width 100%
        height 100%
        background-color rgba(51,51,51,0.3)
    
    &__text
      display block
      position absolute
      bottom 0
      left 0
      width 100%
      height 100%
      color #fff
      text-align center
      z-index 2
      
    &__section
      padding 0 15px
      font-size 10.5pt
      font-weight bold
      position absolute
      top 6%
      left 0
      width 100%
      
    &__title
      padding 0 15px
      font-size 16pt
      font-weight bold
      line-height 30px
      position absolute
      top 25%
      left 0
      width 100%
      
    &__type
      padding 0 15px
      font-size 11pt
      line-height 24px
      position absolute
      top 55%
      left 0
      width 100%
      
    &__price
      padding 0 15px
      font-size 16pt
      position absolute
      bottom 5%
      left 0
      width 100%
      
      &__num
        font-weight bold